<div class="container">
  <h1 class="my-4"> All Restaurants </h1>
  <div>
    <% @restaurants.each do |restaurant| %>
      <div class="card mb-2 card-design">
        <%= link_to restaurant.name, restaurant_path(restaurant) %>
        <%= restaurant.address %>
        <%= restaurant.phone_number %>
        <%= restaurant.category %>
      </div>
    <% end %>
  </div>

  <p class="mt-4"> <%= link_to "Add new restaurant", new_restaurant_path, class: "btn btn-primary w-100" %>
</div>
